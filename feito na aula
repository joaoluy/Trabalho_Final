#include <iostream>
#include <stdlib.h>
#include <conio.h>
using namespace std;

void menu(){
    cout << "Bem vindo ao CATA ASTERISCO" << endl << endl;
    cout << "Escolha o modo de jogo" << endl;
    cout << "1. Normal" << endl;
    cout << "2. Versus" << endl;
}
void obj1(){
    cout << "selecione o objetivo: " << endl;
    cout << "1. ganhar 10 pontos" << endl;
    cout << "2. ganhar 20 pontos" << endl;
    cout << "3. jogar ate perder" << endl;
}
void obj2(){
    cout << "selecione o objetivo: " << endl;
    cout << "1. quem coletar 20 asteriscos primeiro ganha" << endl;
    cout << "2. quem coletar 40 asteriscos primeiro ganha" << endl;
    cout << "3. quem deixar um asterisco cair um perde o jogo" << endl;
}
int main(){
    int modo, objetivo;
    bool validade, validadeo;
    menu();
    while(validade == false){
        cout << "digite o modo: " << endl;
        cin >> modo;
            if(modo == 2){
                validade = true;
                system("clear||cls");
                cout << "Modo escolhido: Versus" << endl;
            }else if(modo == 1){
                validade = true;
                system("clear||cls");
                cout << "Modo escolhido: Normal" << endl;
            }else {
                system("clear||cls");
                cout << "modo invalido \nselecione novamente" << endl;
                cout << "1. Normal" << endl;
                cout << "2. Versus" << endl;
    }
        if(modo == 1){
            while(validadeo == false){
                obj1();
                cin >> objetivo;
                if(objetivo == 1){
                    validadeo = true;
                    cout << "objetivo 1 selecionado" << endl;
                }else if(objetivo == 2){
                    validadeo == true;
                    cout << "obtejivo 2 selecionado" << endl;
                }else if(objetivo == 3){
                    validade == true;
                    cout << "objetivo 3 selecionado" << endl;
                }else cout << "objetivo invalido, selecione novamente" << endl;
        }
            }
                if(modo == 2){
            while(validadeo == false){
                obj2();
                cin >> objetivo;
                if(objetivo == 1){
                    validadeo = true;
                    cout << "objetivo 1 selecionado" << endl;
                    break;
                }else if(objetivo == 2){
                    validadeo == true;
                    cout << "obtejivo 2 selecionado" << endl;
                    break;
                }else if(objetivo == 3){
                    validade == true;
                    cout << "objetivo 3 selecionado" << endl;
                    break;
                }else cout << "objetivo invalido, selecione novamente" << endl;
        }
            }
}
